<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#70c656" />
            <corners
                android:radius="7sp" />
            <padding
                android:left="5sp"
                android:top="5sp"
                android:right="5sp"
                android:bottom="5sp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#383"
                android:endColor="#001100"
                android:angle="270" />
            <corners
                android:radius="7sp" />
            <padding
                android:left="5sp"
                android:top="5sp"
                android:right="5sp"
                android:bottom="5sp" />
		</shape>
    </item>
</selector>